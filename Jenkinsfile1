import groovy.transform.Field
pipeline {
    agent any 
    environment {
        NEW_VERSION = "12345"
    }

    stages {

        stage("build") {
            steps {
                echo "Writing my first declarative syntax"
            }
        }
        
        stage("test") {
            
            steps {
                echo "Testing the syntax"
                echo "${env.JOB_DISPLAY_URL}"
                echo "${env.BUILD_NUMBER}"
                echo "${env.GIT_AUTHOR_NAME}"
                echo "${env.NEW_VERSION}"
            }
        }

        stage("deploy") {
            steps {
                echo "Deploying the syntax"
            }
        }

    }
    post{
        always{
        echo "Code has been used"
        }
    failure{
        echo "Code has failed"
        }
    success{
        echo "Code was successfull"
        }
    }
    
}
